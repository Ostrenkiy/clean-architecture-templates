<?xml version="1.0"?>
<template
    format="5"
    revision="1"
    name="Feature Cache Layer"
    minApi="14"
    minBuildApi="14"
    description="Cache layer for feature">

    <category value="Clean Architecture" />
	<formfactor value="Mobile" />

    <parameter
        id="packageName"
        name="Root package"
        type="string"
        constraints="package"
        default="" />

    <parameter
        id="featureName"
        name="Feature name"
        type="string"
        default="SampleFeature" />

    <parameter
        id="itemName"
        name="Item name (if not equal to feature name)"
        type="string"
        constraints="class|nonempty|unique"
        default="SampleFeature"
        suggest="${featureName}" />

    <parameter
        id="isCreateEntity"
        name="Create entity?"
        type="boolean"
        default="false" />

    <parameter
        id="entityName"
        name="Entity name"
        type="string"
        constraints="class|nonempty|unique"
        default="SampleFeatureEntity"
        suggest="${itemName}Entity"
        visibility="isCreateEntity!false" />

    <parameter
        id="isCreateEntityMapper"
        name="Create entity mapper?"
        type="boolean"
        visibility="isCreateEntity!false"
        default="false" />

    <parameter
        id="entityMapperName"
        name="Entity mapper name"
        type="string"
        constraints="class|nonempty|unique"
        default="SampleFeatureEntityMapper"
        suggest="${entityName}Mapper"
        visibility="isCreateEntityMapper!false" />

<!--    <thumbs>-->
<!--        <thumb>template_droidcon.png</thumb>-->
<!--    </thumbs>-->

    <globals file="globals.xml.ftl" />
    <execute file="recipe.xml.ftl" />

</template>
