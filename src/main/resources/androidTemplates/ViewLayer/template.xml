<?xml version="1.0"?>
<template
    format="5"
    revision="1"
    name="Feature Remote Layer"
    minApi="14"
    minBuildApi="14"
    description="Remote layer for feature">

    <category value="Clean Architecture" />
	<formfactor value="Mobile" />

    <parameter
        id="packageName"
        name="Root package"
        type="string"
        constraints="package"
        default="" />

    <parameter
        id="featureName"
        name="Feature name"
        type="string"
        default="SampleFeature" />

    <parameter
        id="itemName"
        name="Item name (if not equal to feature name)"
        type="string"
        constraints="class|nonempty|unique"
        default="SampleFeature"
        suggest="${featureName}" />

    <parameter
        id="itemPackage"
        name="Package of item"
        type="string"
        constraints="package"
        suggest="${packageName}.domain.model" />

    <parameter
        id="idType"
        name="Id type of item"
        type="string"
        constraints="class|nonempty"
        default="Long" />

    <parameter
        id="isMvp"
        name="Has mvp?"
        type="boolean"
        default="true" />

    <parameter
        id="presenterName"
        name="Presenter name"
        type="string"
        constraints="class|nonempty|unique"
        default="SamplePresenter"
        suggest="${featureName}Presenter"
        visibility="isMvp!false" />

    <parameter
        id="viewName"
        name="View name"
        type="string"
        constraints="class|nonempty|unique"
        default="SampleView"
        suggest="${featureName}View"
        visibility="isMvp!false" />

    <parameter
        id="isHasComponent"
        name="Has component?"
        type="boolean"
        default="true" />

    <parameter
        id="componentName"
        name="Component name"
        type="string"
        constraints="class|nonempty|unique"
        default="SampleComponent"
        suggest="${featureName}Component"
        visibility="isHasComponent!false" />

    <parameter
        id="isCreateList"
        name="Create list?"
        type="boolean"
        default="true" />

    <parameter
        id="listItemName"
        name="List item name"
        type="string"
        constraints="class|nonempty|unique"
        default="SampleItem"
        suggest="${featureName}Item"
        visibility="isCreateList!false" />
    
    <parameter
        id="viewType"
        name="View type"
        type="enum"
        default="fragment">
        <option id="activity">Activity</option>
        <option id="fragment">Fragment</option>
        <option id="fragmentDialog">Fragment Dialog</option>
        <option id="fullscreenFragmentDialog">Fullscreen Fragment Dialog</option>
    </parameter>

<!--    <thumbs>-->
<!--        <thumb>template_droidcon.png</thumb>-->
<!--    </thumbs>-->

    <globals file="globals.xml.ftl" />
    <execute file="recipe.xml.ftl" />

</template>
